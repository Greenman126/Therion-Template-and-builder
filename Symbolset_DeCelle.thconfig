def p_airdraught (expr pos,theta,sc,al)=
    U:=(.25u,u);
    T:=identity aligned al rotated theta scaled sc shifted pos;
    pickup PenC;
    thdraw (.18u,0){left}..(0,.15u)..(.2u,.3u)..(.4u,0)..
        (.15u,-.28u)..(-.25u,0)..{dir 100}(0,.8u)..(0,u);

