def p_gradient (expr pos,theta,sc,al) =
  U:=(.4u, .6u);
  T:=identity aligned al rotated theta scaled sc shifted pos;
  pickup PenC;

  thdraw (-.2u, -.4u) -- (-.4u, .2u);
  thdraw (0u, -.3u) -- (0u, .6u);
  thdraw (.2u, -.4u) -- (.4u, .2u);
enddef;

